<main class="pt-24 pb-12 max-w-5xl mx-auto px-4">
  <h2 class="text-3xl font-bold mb-6">上傳你的東京照片</h2>

  <!-- 上傳區 -->
  <div class="mb-8">
    <input type="file" id="fileInput" class="mb-4 block" />
    <button onclick="uploadImage()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
      上傳
    </button>
  </div>

  <!-- 顯示已上傳圖片 -->
  <div id="uploadedImages" class="grid grid-cols-2 md:grid-cols-3 gap-4"></div>
</main>

<script>
  async function uploadImage() {
    const fileInput = document.getElementById('fileInput');
    if (!fileInput.files.length) {
      alert("請選擇圖片");
      return;
    }

    const file = fileInput.files[0];
    const formData = new FormData();
    formData.append('file', file);
    formData.append('upload_preset', 'tokyo_album');

    const res = await fetch('https://api.cloudinary.com/v1_1/Untitled/image/upload', {
      method: 'POST',
      body: formData
    });

    const data = await res.json();
    const imageUrl = data.secure_url;

    const img = document.createElement('img');
    img.src = imageUrl;
    img.alt = '上傳圖片';
    img.className = 'w-full h-auto rounded shadow';
    document.getElementById('uploadedImages').appendChild(img);
  }
</script>

</body>
